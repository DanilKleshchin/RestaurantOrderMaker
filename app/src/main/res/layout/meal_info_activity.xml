<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorItemBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/meal_info_toolbar"
        layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/meal_info_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:fontFamily="@font/palatino_linotype"
        android:gravity="center"
        android:textColor="@color/mealInfoColor"
        android:textSize="32sp"
        tools:text="Суши"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/meal_info_meal_icon"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    tools:src="@drawable/first"/>

                <TextView
                    android:id="@+id/meal_info_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/palatino_linotype"
                    android:gravity="center"
                    android:textColor="@color/mealInfoColor"
                    android:textSize="25sp"
                    tools:text="Суши суши суши суши суши суши суши"/>

            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/button_add_to_basket"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="0.3"
            android:background="@android:color/transparent"
            android:fontFamily="@font/palatino_linotype"
            android:gravity="center"
            android:text="@string/add_to_basket"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_background"
    android:background="@color/colorItemBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/meal_composition_toolbar"
        layout="@layout/toolbar"/>

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/meal_info_meal_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:fontFamily="@font/palatino_linotype"
        android:gravity="center"
        android:textColor="@color/mealInfoColor"
        android:textSize="32sp"
        tools:text="Суши"/>

    <View
        android:id="@+id/middle_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/meal_info_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/palatino_linotype"
                    android:gravity="center"
                    android:textColor="@color/mealInfoColor"
                    android:textSize="25sp"
                    tools:text="Суши суши суши суши суши суши суши"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
